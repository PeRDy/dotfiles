[color]
    filemode = false
    diff = auto
    status = auto
    branch = auto
    pager = true
[push]
    default = simple
[core]
    autocrlf = input
    pager = less -FRSX
    excludes = ~/.gitexcludes
    editor = vim
[alias]
    tree = "log --all --graph --decorate --oneline"
    b = branch
    ci = commit
    co = checkout
    cob = checkout -b
    d = diff
    l = log
    stree = log --all --graph --pretty=format:'%C(yellow)%h%Creset -%C(auto)%d%Creset %s' --abbrev-commit --date=relative
    tree = log --all --graph --pretty=format:'%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    st = status
    fixup = !sh -c 'git commit -a -m \"fixup! $(git log -1 --format='%s' $@)\" && git rebase -i HEAD~2' -
    squash = !sh -c 'git commit -a -m \"squash! $(git log -1 --format='%s' $@)\" && git rebase -i HEAD~2' -
    ri = rebase --interactive
    rc = rebase --continue
    pr = push gerrit HEAD:refs/for/master
    mt = mergetool
[rebase]
    autosquash = true
[merge]
    tool = kdiff3
[mergetool "kdiff3"]
    keepBackup = false
    trustExitCode = false
[diff]
    tool = kdiff3
[user]
    email = perdy.hh@gmail.com
